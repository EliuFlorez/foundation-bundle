
    /**
     * Deletes a {{ entity }}.
{% if 'annotation' == format %}
     *
     * @Route("/{{ route_path }}/delete/{{ '{' ~ entity_identifier ~ '}' }}", name="delete", methods={"GET", "DELETE"})
{% endif %}
{% endblock phpdoc_method_annotations %}
     *
     * @param Request $request
     * @param {{ entity_class_name }} ${{ entity_var_singular }}
     *
     * @return Response
     */
    public function delete(Request $request, {{ entity_class_name }} ${{ entity_var_singular }}): Response
    {
        $form = $this->createFormBuilder()
            ->setAction($this->generateUrl('{{ route_name }}_delete', ['{{ entity_identifier }}' => ${{ entity_var_singular }}->get{{ entity_identifier|capitalize }}()]))
            ->setMethod('DELETE')
            ->getForm()
        ;

        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $em = $this->getDoctrine()->getManager();
            $em->remove(${{ entity_twig_var_singular }});
            $em->flush();

            return $this->redirectToRoute('{{ route_name }}_index');
        }

        return $this->render('{{ templates_path }}/delete.html.twig', [
            '{{ entity_twig_var_singular }}' => ${{ entity_twig_var_singular }},
            'form' => $form->createView(),
        ]);
    }
