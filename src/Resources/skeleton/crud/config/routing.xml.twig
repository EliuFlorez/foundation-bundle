<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
            http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="{{ route_name_prefix }}_index" path="/{{ index_route }}" methods="GET">
        <default key="_controller">{{ controller }}:index</default>
    </route>

    <route id="{{ route_name_prefix }}_create" path="/{{ route_path_prefix }}/create" methods="GET|POST">
        <default key="_controller">{{ controller }}:create</default>
    </route>

    <route id="{{ route_name_prefix }}_show" path="/{{ route_path_prefix }}/{{ '{' ~ route_entity_parameter ~ '}' }}" methods="GET">
        <default key="_controller">{{ controller }}:show</default>
    </route>

    <route id="{{ route_name_prefix }}_edit" path="/{{ route_path_prefix }}/edit/{{ '{' ~ route_entity_parameter ~ '}' }}" methods="GET|POST">
        <default key="_controller">{{ controller }}:edit</default>
    </route>

    <route id="{{ route_name_prefix }}_delete" path="/{{ route_path_prefix }}/delete/{{ '{' ~ route_entity_parameter ~ '}' }}" methods="GET|DELETE">
        <default key="_controller">{{ controller }}::delete</default>
    </route>

</routes>
